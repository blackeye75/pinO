<% include ./partials/header.ejs%>
  <div class="w-full h-screen bg-center bg-cover  bg-[url('https://images.unsplash.com/photo-1541701494587-cb58502866ab?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center ">
    <div class="w-96 m-5 h-[80vh]  bg-zinc-300 px-4 py-5 rounded-md ">
      <img class="h-10 m-auto pb-2 " src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png"
        alt="">
      <h1 class="text-3xl leading-none tracking-tight capitalize text-center font-semibold mb-5">Create your Account
      </h1>
      <form class="px-8" action="/register" method="post">
        <label class=" text-left w-full block" for="username">Username</label>
        <input class=" border-2 border-zinc-500 block mt-2 w-full px-3 py-1 rounded-md" type="text" name="username"
          placeholder="Username">
        <label class=" text-left w-full block" for="fullname">Full Name</label>
        <input class=" border-2 border-zinc-500 block mt-2 w-full px-3 py-1 rounded-md" type="text" name="fullname"
          placeholder="Fullname">
        <label class=" text-left w-full block" for="email">Email</label>
        <input class=" border-2 border-zinc-500 block mt-2 w-full px-3 py-1 rounded-md" type="email" name="email"
          placeholder="Email Address">
        <label class="text-left w-full block" for="password">Password</label>
        <input class="border-2 border-zinc-500 block mt-2 w-full px-3 py-1 rounded-md" type="password" name="password"
          placeholder="Password">
        <input class=" block mt-2 w-full px-3 py-1 text-white rounded-full bg-red-700" type="submit" value="Create new Account">
        <p class="mt-3 text-xs font-semibold text-zinc-500">By continuing, you agree to Pinterest's Terms of Service and
          acknowledge you've read our Privacy Policy Notice at collection.
        </p>
      </form>
      <a class="block mt-6 text-sm font-semibold text-zinc-700 text-center" href="/">Login Existing Account</a>
    </div>
  </div>
  <% include ./partials/footer.ejs%>